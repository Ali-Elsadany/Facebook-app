<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B5998"
    android:padding="20dp"
    tools:context=".LoginActivity">
<!--
    facebook Text
-->
    <TextView
        android:id="@+id/faceBookText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/faceBook"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_editor_absoluteY="100dp"
        android:padding="30dp"
        android:textSize="50sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />
<!--
    email edit text
-->
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/faceBookText"
        android:hint="@string/textFieldEmail"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"
        android:background="@color/white"

        tools:ignore="MissingConstraints" />
    <!--
    password edit text
-->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_marginTop="10dp"
        android:hint="@string/textFieldPass"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"
        android:background="@color/white"

        tools:ignore="MissingConstraints" />
<!--    login button-->
    <Button
        android:id="@+id/loginButton"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/logIn"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="#4F69A1"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_marginTop="30dp"
        android:onClick="clicked"
        tools:ignore="MissingConstraints" />
    <!--sign up text-->
    <TextView
        android:id="@+id/signupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signUp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginButton"
        android:layout_marginTop="200dp"
        android:textColor="@color/white"
        android:textSize="20sp"

        tools:ignore="MissingConstraints"
        android:focusable="true" />
    <!--Help text-->
    <TextView
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signupText"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="20sp"

        tools:ignore="MissingConstraints"
        android:focusable="true" />




</androidx.constraintlayout.widget.ConstraintLayout>